<local:ProgressDialogBase  
    x:Class="Playground.WpfApp.Forms.ReactiveEx.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Playground.WpfApp.Forms.ReactiveEx"
    mc:Ignorable="d"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    d:DesignHeight="450"
    d:DesignWidth="650"
    BorderThickness="1"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    SizeToContent="WidthAndHeight"
    WindowTransitionsEnabled="True">

    <StackPanel Margin="15" VerticalAlignment="Center">
        <TextBlock x:Name="_txtMessage" x:FieldModifier="private" />
        <controls:MetroProgressBar Margin="0,10,0,0" IsIndeterminate="True" />
    </StackPanel>
</local:ProgressDialogBase>
